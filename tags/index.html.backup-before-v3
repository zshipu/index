    <script type="text/javascript" src='/js/tags-enhanced.js'></script>

    <!-- 侧边栏分类过滤交互 -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // 侧边栏分类过滤器
        document.querySelectorAll('.category-filter-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const category = this.dataset.category;
                if (window.TagsSystem) {
                    window.TagsSystem.filterCategory(category);
                    // 滚动到标签云区域
                    document.querySelector('.tag-cloud-section').scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // 动态加载热门标签到侧边栏
        setTimeout(function() {
            fetch('/tag-hot.json')
                .then(res => res.json())
                .then(data => {
                    const hotTagsWidget = document.getElementById('hot-tags-widget');
                    if (hotTagsWidget && data.tags) {
                        const html = data.tags.slice(0, 20).map(tag =>
                            `<a href="${tag.url}">${tag.name}</a>`
                        ).join(' ');
                        hotTagsWidget.innerHTML = html;
                    }
                })
                .catch(err => console.error('加载热门标签失败:', err));
        }, 1000);
    });
    </script>

